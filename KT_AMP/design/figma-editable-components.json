        "duration": "300ms",
        "easing": "ease-out"
      }
    },
    "chartControl": {
      "hover": {
        "fills": [{ "type": "solid", "color": "#ff4449" }],
        "duration": "200ms",
        "easing": "ease-out"
      },
      "click": {
        "state": "active",
        "duration": "200ms",
        "easing": "ease-out"
      }
    },
    "statusIndicator": {
      "pulse": {
        "opacity": [1, 0.5, 1],
        "duration": "2000ms",
        "easing": "ease-in-out",
        "iterations": "infinite"
      }
    }
  },

  "responsiveBreakpoints": {
