      "minWidth": 1200,
      "layout": "horizontal",
      "sidebarWidth": 280,
      "metricsColumns": 4
    },
    "tablet": {
      "minWidth": 768,
      "maxWidth": 1199,
      "layout": "vertical",
      "sidebarHeight": 80,
      "metricsColumns": 2
    },
    "mobile": {
      "maxWidth": 767,
      "layout": "vertical",
      "sidebarHidden": true,
      "metricsColumns": 1
    }
  },

  "exportSettings": {
