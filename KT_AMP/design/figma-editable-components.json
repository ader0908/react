{
  "figmaVersion": "1.0",
  "name": "KT-STT 시스템 모니터링 대시보드",
  "description": "편집 가능한 Figma 컴포넌트 정의 파일",
  "lastModified": "2024-12-19",
  
  "artboards": {
    "desktop": {
      "name": "Desktop Dashboard",
      "width": 1920,
      "height": 1080,
      "background": {
        "type": "linearGradient",
        "angle": 135,
        "stops": [
          { "position": 0, "color": "#f8fafc" },
          { "position": 1, "color": "#f1f5f9" }
        ]
      }
    }
  },

  "colorStyles": {
    "brand": {
      "kt-red-primary": "#e31e24",
      "kt-red-light": "#ff4449",
      "kt-red-dark": "#c41e3a"
    },
    "system": {
      "cpu-primary": "#3b82f6",
      "cpu-light": "#60a5fa",
      "cpu-dark": "#1d4ed8",
      "cpu-background": "#eff6ff",
      
      "memory-primary": "#10b981",
      "memory-light": "#34d399",
      "memory-dark": "#047857",
      "memory-background": "#ecfdf5",
      
      "storage-primary": "#8b5cf6",
      "storage-light": "#a78bfa",
      "storage-dark": "#7c3aed",
      "storage-background": "#f3e8ff",
      
      "network-primary": "#f59e0b",
      "network-light": "#fbbf24",
      "network-dark": "#d97706",
      "network-background": "#fffbeb"
    },
    "status": {
      "excellent": "#059669",
      "good": "#65a30d",
      "warning": "#d97706",
      "critical": "#dc2626",
      "offline": "#6b7280"
    },
    "neutral": {
      "50": "#f9fafb",
      "100": "#f3f4f6",
      "200": "#e5e7eb",
      "300": "#d1d5db",
      "400": "#9ca3af",
      "500": "#6b7280",
      "600": "#4b5563",
      "700": "#374151",
      "800": "#1f2937",
      "900": "#111827"
    },
    "background": {
      "primary": "#ffffff",
      "secondary": "#f8fafc",
      "tertiary": "#f1f5f9"
    }
  },

  "textStyles": {
    "heading-h1": {
      "fontFamily": "Noto Sans KR",
      "fontSize": 32,
      "fontWeight": 700,
      "lineHeight": 1.2
    },
    "heading-h2": {
      "fontFamily": "Noto Sans KR",
      "fontSize": 20,
      "fontWeight": 700,
      "lineHeight": 1.3
    },
    "body-base": {
      "fontFamily": "Noto Sans KR",
      "fontSize": 14,
      "fontWeight": 400,
      "lineHeight": 1.5
    },
    "body-small": {
      "fontFamily": "Noto Sans KR",
      "fontSize": 12,
      "fontWeight": 400,
      "lineHeight": 1.4
    },
    "metric-value": {
      "fontFamily": "Noto Sans KR",
      "fontSize": 32,
      "fontWeight": 700,
      "lineHeight": 1.1
    },
    "card-title": {
      "fontFamily": "Noto Sans KR",
      "fontSize": 16,
      "fontWeight": 600,
      "lineHeight": 1.3
    },
    "caption": {
      "fontFamily": "Noto Sans KR",
      "fontSize": 10,
      "fontWeight": 400,
      "lineHeight": 1.3
    }
  },

  "effects": {
    "shadow-sm": {
      "type": "dropShadow",
      "x": 0,
      "y": 1,
      "blur": 2,
      "spread": 0,
      "color": "rgba(0, 0, 0, 0.05)"
    },
    "shadow-base": {
      "type": "dropShadow",
      "x": 0,
      "y": 1,
      "blur": 3,
      "spread": 0,
      "color": "rgba(0, 0, 0, 0.1)"
    },
    "shadow-md": {
      "type": "dropShadow",
      "x": 0,
      "y": 4,
      "blur": 6,
      "spread": -1,
      "color": "rgba(0, 0, 0, 0.1)"
    },
    "shadow-lg": {
      "type": "dropShadow",
      "x": 0,
      "y": 10,
      "blur": 15,
      "spread": -3,
      "color": "rgba(0, 0, 0, 0.1)"
    }
  },

  "components": {
    "container": {
      "name": "Main Container",
      "type": "frame",
      "width": 1920,
      "height": 1080,
      "layout": {
        "type": "autoLayout",
        "direction": "horizontal",
        "padding": { "top": 0, "right": 0, "bottom": 0, "left": 0 },
        "gap": 0
      },
      "children": ["sidebar", "main-content"]
    },

    "sidebar": {
      "name": "Sidebar",
      "type": "frame",
      "width": 280,
      "height": 1080,
      "fills": [{ "type": "solid", "color": "#ffffff" }],
      "effects": ["shadow-lg"],
      "layout": {
        "type": "autoLayout",
        "direction": "vertical",
        "padding": { "top": 24, "right": 24, "bottom": 24, "left": 24 },
        "gap": 32
      },
      "children": [
        {
          "name": "Sidebar Header",
          "type": "frame",
          "layout": {
            "type": "autoLayout",
            "direction": "vertical",
            "gap": 8
          },
          "children": [
            {
              "name": "Title",
              "type": "text",
              "content": "AICP MANAGEMENT PORTAL",
              "style": "body-base",
              "fills": [{ "type": "solid", "color": "#111827" }],
              "fontWeight": 700
            },
            {
              "name": "Subtitle",
              "type": "text",
              "content": "HW 리소스 현황",
              "style": "body-small",
              "fills": [{ "type": "solid", "color": "#6b7280" }]
            }
          ]
        },
        {
          "name": "Navigation",
          "type": "frame",
          "layout": {
            "type": "autoLayout",
            "direction": "vertical",
            "gap": 24
          },
          "children": [
            {
              "name": "PROJECT Section",
              "type": "frame",
              "layout": {
                "type": "autoLayout",
                "direction": "vertical",
                "gap": 12
              },
              "children": [
                {
                  "name": "Section Title",
                  "type": "text",
                  "content": "PROJECT",
                  "style": "caption",
                  "fills": [{ "type": "solid", "color": "#9ca3af" }],
                  "textCase": "upper"
                },
                {
                  "name": "Nav Items",
                  "type": "frame",
                  "layout": {
                    "type": "autoLayout",
                    "direction": "vertical",
                    "gap": 4
                  },
                  "children": [
                    {
                      "name": "홈 현황",
                      "type": "navItem",
                      "active": false,
                      "icon": "home",
                      "text": "홈 현황"
                    },
                    {
                      "name": "HW 리소스 현황",
                      "type": "navItem",
                      "active": true,
                      "icon": "server",
                      "text": "HW 리소스 현황"
                    },
                    {
                      "name": "성능 분석",
                      "type": "navItem",
                      "active": false,
                      "icon": "chart-line",
                      "text": "성능 분석"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },

    "main-content": {
      "name": "Main Content",
      "type": "frame",
      "width": 1640,
      "height": 1080,
      "layout": {
        "type": "autoLayout",
        "direction": "vertical",
        "padding": { "top": 24, "right": 24, "bottom": 24, "left": 24 },
        "gap": 24
      },
      "children": ["header", "metrics-grid", "charts-section", "details-section"]
    },

    "header": {
      "name": "Header",
      "type": "frame",
      "width": 1592,
      "height": 120,
      "fills": [
        {
          "type": "linearGradient",
          "angle": 135,
          "stops": [
            { "position": 0, "color": "#e31e24" },
            { "position": 1, "color": "#c41e3a" }
          ]
        }
      ],
      "cornerRadius": 12,
      "effects": ["shadow-lg"],
      "layout": {
        "type": "autoLayout",
        "direction": "horizontal",
        "alignment": "spaceBetween",
        "padding": { "top": 24, "right": 24, "bottom": 24, "left": 24 },
        "gap": 24
      },
      "children": [
        {
          "name": "Header Left",
          "type": "frame",
          "layout": {
            "type": "autoLayout",
            "direction": "vertical",
            "gap": 8
          },
          "children": [
            {
              "name": "Title",
              "type": "text",
              "content": "KT-STT 시스템 모니터링",
              "style": "heading-h1",
              "fills": [{ "type": "solid", "color": "#ffffff" }]
            },
            {
              "name": "Subtitle",
              "type": "text",
              "content": "실시간 하드웨어 리소스 및 성능 현황",
              "style": "body-base",
              "fills": [{ "type": "solid", "color": "rgba(255, 255, 255, 0.9)" }]
            }
          ]
        },
        {
          "name": "Header Right",
          "type": "frame",
          "layout": {
            "type": "autoLayout",
            "direction": "horizontal",
            "alignment": "center",
            "gap": 12
          },
          "children": [
            {
              "name": "Status Indicator",
              "type": "frame",
              "width": 12,
              "height": 12,
              "fills": [{ "type": "solid", "color": "#059669" }],
              "cornerRadius": 6,
              "effects": [
                {
                  "type": "innerShadow",
                  "color": "rgba(5, 150, 105, 0.5)",
                  "blur": 4
                }
              ]
            },
            {
              "name": "Status Text",
              "type": "text",
              "content": "KT-STT 서비스 정상",
              "style": "body-base",
              "fills": [{ "type": "solid", "color": "#ffffff" }],
              "fontWeight": 600
            }
          ]
        }
      ]
    },

    "metrics-grid": {
      "name": "Metrics Grid",
      "type": "frame",
      "width": 1592,
      "height": 180,
      "layout": {
        "type": "autoLayout",
        "direction": "horizontal",
        "gap": 16
      },
      "children": [
        {
          "name": "CPU Metric",
          "type": "metricCard",
          "variant": "cpu",
          "data": {
            "title": "CPU 사용률",
            "description": "전체 서버 평균 CPU 사용량",
            "value": "45.2%",
            "change": "-2.3%",
            "changeType": "positive",
            "status": "excellent",
            "progress": 45.2
          }
        },
        {
          "name": "Memory Metric",
          "type": "metricCard",
          "variant": "memory",
          "data": {
            "title": "메모리 사용률",
            "description": "전체 서버 평균 메모리 사용량",
            "value": "68.7%",
            "change": "+5.1%",
            "changeType": "negative",
            "status": "good",
            "progress": 68.7
          }
        },
        {
          "name": "Storage Metric",
          "type": "metricCard",
          "variant": "storage",
          "data": {
            "title": "스토리지 사용률",
            "description": "전체 디스크 평균 사용량",
            "value": "34.8%",
            "change": "-1.2%",
            "changeType": "positive",
            "status": "excellent",
            "progress": 34.8
          }
        },
        {
          "name": "Network Metric",
          "type": "metricCard",
          "variant": "network",
          "data": {
            "title": "네트워크 사용률",
            "description": "전체 네트워크 트래픽",
            "value": "23.1%",
            "change": "+7.4%",
            "changeType": "positive",
            "status": "excellent",
            "progress": 23.1
          }
        }
      ]
    },

    "metricCard": {
      "name": "Metric Card",
      "type": "component",
      "width": 395,
      "height": 180,
      "fills": [{ "type": "solid", "color": "#ffffff" }],
      "cornerRadius": 12,
      "effects": ["shadow-base"],
      "layout": {
        "type": "autoLayout",
        "direction": "vertical",
        "padding": { "top": 20, "right": 20, "bottom": 20, "left": 20 },
        "gap": 12
      },
      "variants": {
        "cpu": {
          "topBorder": "#3b82f6",
          "iconBackground": "linear-gradient(135deg, #3b82f6, #60a5fa)",
          "valueColor": "#3b82f6",
          "progressColor": "#3b82f6"
        },
        "memory": {
          "topBorder": "#10b981",
          "iconBackground": "linear-gradient(135deg, #10b981, #34d399)",
          "valueColor": "#10b981",
          "progressColor": "#10b981"
        },
        "storage": {
          "topBorder": "#8b5cf6",
          "iconBackground": "linear-gradient(135deg, #8b5cf6, #a78bfa)",
          "valueColor": "#8b5cf6",
          "progressColor": "#8b5cf6"
        },
        "network": {
          "topBorder": "#f59e0b",
          "iconBackground": "linear-gradient(135deg, #f59e0b, #fbbf24)",
          "valueColor": "#f59e0b",
          "progressColor": "#f59e0b"
        }
      },
      "children": [
        {
          "name": "Top Border",
          "type": "rectangle",
          "width": 395,
          "height": 4,
          "fills": [{ "type": "solid", "color": "{variant.topBorder}" }],
          "position": "absolute",
          "x": 0,
          "y": 0
        },
        {
          "name": "Header",
          "type": "frame",
          "layout": {
            "type": "autoLayout",
            "direction": "horizontal",
            "alignment": "spaceBetween"
          },
          "children": [
            {
              "name": "Info",
              "type": "frame",
              "layout": {
                "type": "autoLayout",
                "direction": "vertical",
                "gap": 4
              },
              "children": [
                {
                  "name": "Title",
                  "type": "text",
                  "content": "{data.title}",
                  "style": "card-title",
                  "fills": [{ "type": "solid", "color": "#111827" }]
                },
                {
                  "name": "Description",
                  "type": "text",
                  "content": "{data.description}",
                  "style": "body-small",
                  "fills": [{ "type": "solid", "color": "#6b7280" }]
                }
              ]
            },
            {
              "name": "Icon Container",
              "type": "frame",
              "width": 40,
              "height": 40,
              "fills": [{ "type": "gradient", "value": "{variant.iconBackground}" }],
              "cornerRadius": 8,
              "children": [
                {
                  "name": "Icon",
                  "type": "icon",
                  "size": 24,
                  "color": "#ffffff"
                }
              ]
            }
          ]
        },
        {
          "name": "Value",
          "type": "text",
          "content": "{data.value}",
          "style": "metric-value",
          "fills": [{ "type": "solid", "color": "{variant.valueColor}" }]
        },
        {
          "name": "Details",
          "type": "frame",
          "layout": {
            "type": "autoLayout",
            "direction": "horizontal",
            "alignment": "spaceBetween"
          },
          "children": [
            {
              "name": "Change",
              "type": "frame",
              "layout": {
                "type": "autoLayout",
                "direction": "horizontal",
                "alignment": "center",
                "gap": 4
              },
              "children": [
                {
                  "name": "Arrow",
                  "type": "icon",
                  "name": "{data.changeType === 'positive' ? 'arrow-down' : 'arrow-up'}",
                  "size": 12,
                  "color": "{data.changeType === 'positive' ? '#059669' : '#dc2626'}"
                },
                {
                  "name": "Change Text",
                  "type": "text",
                  "content": "{data.change} 전일 대비",
                  "style": "body-small",
                  "fills": [{ "type": "solid", "color": "{data.changeType === 'positive' ? '#059669' : '#dc2626'}" }],
                  "fontWeight": 500
                }
              ]
            },
            {
              "name": "Status Badge",
              "type": "statusBadge",
              "variant": "{data.status}"
            }
          ]
        },
        {
          "name": "Progress Bar",
          "type": "progressBar",
          "variant": "{variant}",
          "value": "{data.progress}"
        }
      ]
    },

    "statusBadge": {
      "name": "Status Badge",
      "type": "component",
      "height": 24,
      "cornerRadius": 9999,
      "layout": {
        "type": "autoLayout",
        "direction": "horizontal",
        "padding": { "top": 4, "right": 12, "bottom": 4, "left": 12 }
      },
      "variants": {
        "excellent": {
          "background": "#059669",
          "text": "EXCELLENT",
          "textColor": "#ffffff"
        },
        "good": {
          "background": "#65a30d",
          "text": "GOOD",
          "textColor": "#ffffff"
        },
        "warning": {
          "background": "#d97706",
          "text": "WARNING",
          "textColor": "#ffffff"
        },
        "critical": {
          "background": "#dc2626",
          "text": "CRITICAL",
          "textColor": "#ffffff"
        }
      },
      "children": [
        {
          "name": "Text",
          "type": "text",
          "content": "{variant.text}",
          "style": "caption",
          "fills": [{ "type": "solid", "color": "{variant.textColor}" }],
          "fontWeight": 700,
          "textCase": "upper"
        }
      ]
    },

    "progressBar": {
      "name": "Progress Bar",
      "type": "component",
      "width": 355,
      "height": 8,
      "children": [
        {
          "name": "Background",
          "type": "rectangle",
          "width": 355,
          "height": 8,
          "fills": [{ "type": "solid", "color": "#e5e7eb" }],
          "cornerRadius": 4
        },
        {
          "name": "Fill",
          "type": "rectangle",
          "width": "{(355 * value) / 100}",
          "height": 8,
          "fills": [{ "type": "gradient", "value": "{variant.progressColor}" }],
          "cornerRadius": 4
        }
      ]
    },

    "charts-section": {
      "name": "Charts Section",
      "type": "frame",
      "width": 1592,
      "height": 420,
      "layout": {
        "type": "autoLayout",
        "direction": "horizontal",
        "gap": 24
      },
      "children": [
        {
          "name": "Main Chart",
          "type": "chartContainer",
          "variant": "main",
          "width": 1093,
          "height": 420
        },
        {
          "name": "Donut Chart",
          "type": "chartContainer",
          "variant": "donut",
          "width": 547,
          "height": 420
        }
      ]
    },

    "chartContainer": {
      "name": "Chart Container",
      "type": "component",
      "fills": [{ "type": "solid", "color": "#ffffff" }],
      "cornerRadius": 12,
      "effects": ["shadow-base"],
      "layout": {
        "type": "autoLayout",
        "direction": "vertical",
        "padding": { "top": 24, "right": 24, "bottom": 24, "left": 24 },
        "gap": 16
      },
      "variants": {
        "main": {
          "title": "시스템 리소스 추이",
          "width": 1093,
          "height": 420,
          "chartHeight": 350
        },
        "donut": {
          "title": "리소스 분포",
          "width": 547,
          "height": 420,
          "chartHeight": 250
        }
      },
      "children": [
        {
          "name": "Header",
          "type": "frame",
          "layout": {
            "type": "autoLayout",
            "direction": "horizontal",
            "alignment": "spaceBetween"
          },
          "children": [
            {
              "name": "Title",
              "type": "text",
              "content": "{variant.title}",
              "style": "heading-h2",
              "fills": [{ "type": "solid", "color": "#111827" }]
            },
            {
              "name": "Controls",
              "type": "frame",
              "layout": {
                "type": "autoLayout",
                "direction": "horizontal",
                "gap": 8
              },
              "children": [
                {
                  "name": "1시간",
                  "type": "chartControl",
                  "active": false
                },
                {
                  "name": "6시간",
                  "type": "chartControl",
                  "active": true
                },
                {
                  "name": "24시간",
                  "type": "chartControl",
                  "active": false
                },
                {
                  "name": "7일",
                  "type": "chartControl",
                  "active": false
                }
              ]
            }
          ]
        },
        {
          "name": "Chart Area",
          "type": "frame",
          "width": "{variant.width - 48}",
          "height": "{variant.chartHeight}",
          "fills": [{ "type": "solid", "color": "#f9fafb" }],
          "cornerRadius": 8,
          "children": [
            {
              "name": "Chart Placeholder",
              "type": "text",
              "content": "Chart Area - {variant.title}",
              "style": "body-base",
              "fills": [{ "type": "solid", "color": "#9ca3af" }],
              "alignment": "center"
            }
          ]
        }
      ]
    },

    "chartControl": {
      "name": "Chart Control",
      "type": "component",
      "height": 32,
      "cornerRadius": 6,
      "layout": {
        "type": "autoLayout",
        "direction": "horizontal",
        "padding": { "top": 8, "right": 16, "bottom": 8, "left": 16 }
      },
      "states": {
        "default": {
          "background": "#f3f4f6",
          "textColor": "#6b7280",
          "border": "#e5e7eb"
        },
        "active": {
          "background": "#e31e24",
          "textColor": "#ffffff",
          "border": "#e31e24"
        },
        "hover": {
          "background": "#ff4449",
          "textColor": "#ffffff",
          "border": "#ff4449"
        }
      },
      "children": [
        {
          "name": "Text",
          "type": "text",
          "content": "{text}",
          "style": "body-small",
          "fills": [{ "type": "solid", "color": "{state.textColor}" }],
          "fontWeight": 500
        }
      ]
    },

    "details-section": {
      "name": "Details Section",
      "type": "frame",
      "width": 1592,
      "height": 360,
      "layout": {
        "type": "autoLayout",
        "direction": "horizontal",
        "gap": 24
      },
      "children": [
        {
          "name": "Server Status",
          "type": "detailsCard",
          "variant": "serverStatus",
          "width": 784,
          "height": 360
        },
        {
          "name": "Real-time Alerts",
          "type": "detailsCard",
          "variant": "alerts",
          "width": 784,
          "height": 360
        }
      ]
    },

    "detailsCard": {
      "name": "Details Card",
      "type": "component",
      "fills": [{ "type": "solid", "color": "#ffffff" }],
      "cornerRadius": 12,
      "effects": ["shadow-base"],
      "layout": {
        "type": "autoLayout",
        "direction": "vertical"
      },
      "variants": {
        "serverStatus": {
          "title": "서버 현황",
          "icon": "server"
        },
        "alerts": {
          "title": "실시간 알림",
          "icon": "bell"
        }
      },
      "children": [
        {
          "name": "Header",
          "type": "frame",
          "width": "fill",
          "height": 60,
          "fills": [{ "type": "solid", "color": "#f3f4f6" }],
          "layout": {
            "type": "autoLayout",
            "direction": "horizontal",
            "alignment": "center",
